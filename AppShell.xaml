<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HereForYou.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HereForYou"
    xmlns:views="clr-namespace:HereForYou.Views"
    Title="HereForYou"
    FlowDirection="RightToLeft">

    <TabBar>
        <Tab Title="ראשי">
            <ShellContent
                Title="ראשי"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>

        <Tab Title="תובנות">
            <ShellContent
                Title="תובנות"
                ContentTemplate="{DataTemplate views:InsightsPage}"
                Route="InsightsPage" />
        </Tab>

        <Tab Title="הגדרות">
            <ShellContent
                Title="הגדרות"
                ContentTemplate="{DataTemplate views:SettingsPage}"
                Route="SettingsPage" />
        </Tab>
    </TabBar>

</Shell>
